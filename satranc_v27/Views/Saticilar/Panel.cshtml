@model List<satranc_v27.Models.Entity.Urunler>
@{ ViewBag.Title = "Panel";
                Layout = "~/Views/Shared/_SaticilarLayout.cshtml"; }

<div class="container mt-4">
    <h3 class="mb-4">Ürünlerim</h3>

    <a href="@Url.Action("UrunEkle", "Urunler")" class="btn btn-success mb-3">Yeni Ürün Ekle</a>

    @if (Model != null && Model.Any())
    {
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
<tr>
    <td>@urun.urun_adi</td>
    <td>@urun.fiyat ₺</td>
    <td>@urun.stok_miktari</td>
    <td>@urun.aciklama</td>
    <td>
        <a href="@Url.Action("UrunDuzenle", "Saticilar", new { id = urun.urun_id })" class="btn btn-warning btn-sm">Düzenle</a>
        <a href="@Url.Action("UrunSil", "Urunler", new { id = urun.urun_id })" class="btn btn-danger btn-sm" onclick="return confirm('Ürünü silmek istediğinize emin misiniz?');">Sil</a>
    </td>
</tr>                }
    </tbody>
</table> }
            else
            {
<div class="alert alert-info">
    Henüz ürününüz bulunmamaktadır.
</div>}
</div>
