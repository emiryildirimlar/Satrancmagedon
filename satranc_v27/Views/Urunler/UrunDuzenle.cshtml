@model satranc_v27.Models.Entity.Urunler

@{ ViewBag.Title = "UrunDuzenle";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Ürün Düzenle</h2>

@using (Html.BeginForm("UrunDuzenle", "Urunler", FormMethod.Post))
{
@Html.HiddenFor(x => x.urun_id)
                @Html.HiddenFor(x => x.aktif) <!-- BURASI EKLENDİ -->

                                <div class="form-group">
                                    @Html.LabelFor(x => x.urun_adi)
                                    @Html.TextBoxFor(x => x.urun_adi, new { @class = "form-control" })
                                </div>

                                                <div class="form-group">
                                                    @Html.LabelFor(x => x.kategori_id)
                                                    @Html.TextBoxFor(x => x.kategori_id, new { @class = "form-control" })
                                                </div>

                                                                <div class="form-group">
                                                                    @Html.LabelFor(x => x.fiyat)
                                                                    @Html.EditorFor(x => x.fiyat, new { htmlAttributes = new { @class = "form-control" } })
                                                                </div>

                                                                                <div class="form-group">
                                                                                    @Html.LabelFor(x => x.stok_miktari)
                                                                                    @Html.TextBoxFor(x => x.stok_miktari, new { @class = "form-control", type = "number" })
                                                                                </div>

                                                                                                <div class="form-group">
                                                                                                    @Html.LabelFor(x => x.aciklama)
                                                                                                    @Html.TextAreaFor(x => x.aciklama, new { @class = "form-control" })
                                                                                                </div>

                                                                                                                <div class="form-group">
                                                                                                                    @Html.LabelFor(x => x.gorsel_url)
                                                                                                                    @Html.TextBoxFor(x => x.gorsel_url, new { @class = "form-control" })
                                                                                                                </div>

                                                                                                                                <button type="submit" class="btn btn-success">Güncelle</button>}