@model satranc_v27.Models.Entity.Siparisler

@{ ViewBag.Title = "Sipariş Düzenle"; }

<h2 class="text-center">Sipariş Düzenle</h2>

@using (Html.BeginForm("SiparisDuzenle", "Siparisler", FormMethod.Post))
{
@Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.siparis_id)

                                <div class="form-horizontal">

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.alici_id, "Alıcı ID", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.alici_id, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.alici_id, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.siparis_tarihi, "Sipariş Tarihi", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.siparis_tarihi,
                                                     new
                                                     {
                                                         @class = "form-control",
                                                         @type = "datetime-local",
                                                         @Value = Model.siparis_tarihi.HasValue ? Model.siparis_tarihi.Value.ToString("yyyy-MM-ddTHH:mm") : ""
                                                     })
                                            @Html.ValidationMessageFor(model => model.siparis_tarihi, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.toplam_tutar, "Toplam Tutar", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.toplam_tutar, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.toplam_tutar, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.odeme_durumu, "Ödeme Durumu", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.odeme_durumu, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.odeme_durumu, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.kargo_durumu, "Kargo Durumu", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.kargo_durumu, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.kargo_durumu, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.teslimat_adresi, "Teslimat Adresi", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(model => model.teslimat_adresi, new { @class = "form-control", rows = 3 })
                                            @Html.ValidationMessageFor(model => model.teslimat_adresi, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group mt-4">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button type="submit" class="btn btn-success">
                                                <i class="glyphicon glyphicon-floppy-disk"></i> Düzenlemeyi Kaydet
                                            </button>
                                            @Html.ActionLink("İptal Et", "Index", null, new { @class = "btn btn-secondary ml-2" })
                                        </div>
                                    </div>

                                </div>}