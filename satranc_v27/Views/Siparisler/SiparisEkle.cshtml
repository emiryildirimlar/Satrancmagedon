@model satranc_v27.Models.Entity.Siparisler

@{
    ViewBag.Title = "Yeni Sipariş Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Sipariş Ekle</h2>

@using (Html.BeginForm("SiparisEkle", "Siparisler", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.alici_id)
        @Html.DropDownListFor(x => x.alici_id, (SelectList)ViewBag.Alicilar, "Alıcı Seçiniz", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.toplam_tutar)
        @Html.TextBoxFor(x => x.toplam_tutar, new { @class = "form-control", type = "text" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.odeme_durumu)
        @Html.TextBoxFor(x => x.odeme_durumu, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.kargo_durumu)
        @Html.TextBoxFor(x => x.kargo_durumu, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.teslimat_adresi)
        @Html.TextAreaFor(x => x.teslimat_adresi, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.siparis_tarihi)
        @Html.TextBoxFor(x => x.siparis_tarihi, new { @class = "form-control", type = "datetime-local" })
    </div>

    <button type="submit" class="btn btn-success">Siparişi Kaydet</button>
    @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary" })
}
