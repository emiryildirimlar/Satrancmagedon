@model satranc_v27.Models.Entity.Egitimler
@{
    ViewBag.Title = "EgitimEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Eğitim Ekle</h2>

@using (Html.BeginForm("EgitimEkle", "Egitimler", FormMethod.Post))
{
<div class="form-group">
    
    @Html.LabelFor(x => x.egitim_adi)
    @Html.TextBoxFor(x => x.egitim_adi, new { @class = "form-control" })
</div>

    <div class="form-group">
        @Html.LabelFor(x => x.egitim_aciklama)
        @Html.TextAreaFor(x => x.egitim_aciklama, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.egitim_tarihi)
        @Html.TextBoxFor(x => x.egitim_tarihi, new { @class = "form-control", type = "datetime-local" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.egitim_suresi)
        @Html.TextBoxFor(x => x.egitim_suresi, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.egitim_fiyati)
        @Html.TextBoxFor(x => x.egitim_fiyati, new { @class = "form-control", type = "text", step = "any" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.egitim_gorsel_url)
        @Html.TextBoxFor(x => x.egitim_gorsel_url, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary" })}

