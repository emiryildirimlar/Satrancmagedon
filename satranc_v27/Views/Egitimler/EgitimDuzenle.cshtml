
@model satranc_v27.Models.Entity.Egitimler

@{
    ViewBag.Title = "EgitimDuzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eğitim Düzenle</h2>

@using (Html.BeginForm("EgitimDuzenle", "Egitimler", FormMethod.Post))
{
@Html.HiddenFor(x => x.egitim_id) <!-- Güncelleme için ID'yi gizli olarak gönderiyoruz -->

                <div class="form-group">
                    @Html.LabelFor(x => x.egitim_adi)
                    @Html.TextBoxFor(x => x.egitim_adi, new { @class = "form-control" })
                </div>

                                <div class="form-group">
                                    @Html.LabelFor(x => x.egitim_aciklama)
                                    @Html.TextAreaFor(x => x.egitim_aciklama, new { @class = "form-control", rows = 4 })
                                </div>

                                                <div class="form-group">
                                                    @Html.LabelFor(x => x.egitim_tarihi)
                                                    @Html.TextBoxFor(x => x.egitim_tarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                                </div>

                                                                <div class="form-group">
                                                                    @Html.LabelFor(x => x.egitim_suresi)
                                                                    @Html.TextBoxFor(x => x.egitim_suresi, new { @class = "form-control" })
                                                                </div>

                                                                <div class="form-group">
                                                                    @Html.LabelFor(x => x.egitim_fiyati)
                                                                    @Html.EditorFor(x => x.egitim_fiyati, new { htmlAttributes = new { @class = "form-control" } })
                                                                </div>

                                                                                                <div class="form-group">
                                                                                                    @Html.LabelFor(x => x.egitim_gorsel_url)
                                                                                                    @Html.TextBoxFor(x => x.egitim_gorsel_url, new { @class = "form-control" })
                                                                                                </div>

                                                                                                                <div class="form-group">
                                                                                                                    @Html.Label("Aktif mi?")
                                                                                                                    @Html.CheckBox("egitim_aktif", Model.egitim_aktif ?? false)
                                                                                                                </div>
                                                                                                                                <button type="submit" class="btn btn-primary">Güncelle</button>
                                                                                                                                                @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary" })}

