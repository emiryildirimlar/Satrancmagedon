<!DOCTYPE html>
<html>
<head>
    <title>♚ Satrancmagedon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        body {
            background-color: #f0d9b5;
            background-image: linear-gradient(45deg, #b58863 25%, transparent 25%), linear-gradient(-45deg, #b58863 25%, transparent 25%), linear-gradient(45deg, transparent 75%, #b58863 75%), linear-gradient(-45deg, transparent 75%, #b58863 75%);
            background-size: 100px 100px;
            background-position: 0 0, 50px 0, 50px -50px, 0px 50px;
        }

        .navbar {
            background-color: #2c2c2c !important;
            border-bottom: 4px solid #b58863;
        }

        .navbar-brand {
            font-family: 'Georgia', serif;
            font-size: 1.8rem;
            color: #f0d9b5 !important;
            text-shadow: 2px 2px 4px #000;
        }

            .navbar-brand::before {
                content: "♚";
                margin-right: 10px;
            }

        .nav-link {
            color: #f0d9b5 !important;
            font-weight: bold;
        }

            .nav-link:hover {
                color: #fff !important;
            }

        .container {
            background-color: rgba(255, 255, 255, 0.85);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            margin-top: 20px;
            border: 2px solid #2c2c2c;
            flex: 1;
        }

        .card {
            border: 2px solid #b58863;
            transition: all 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        footer {
            background-color: #2c2c2c;
            color: #f0d9b5;
            text-align: center;
            padding: 1rem 0;
            border-top: 4px solid #b58863;

        }
    </style>

</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Urunler">SATRANCMAGEDON</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Urunler"><i class="fas fa-home"></i> Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Urunler"><i class="fas fa-chess"></i> Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Egitimler"><i class="fas fa-chess-knight"></i> Eğitimler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Siparisler"><i class="fas fa-shopping-cart"></i> Siparişler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Kategoriler"><i class="fas fa-list"></i> Kategoriler</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- İÇERİK -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="text-center py-3 mt-4" style="background-color: #2c2c2c; color: #f0d9b5;">
        <p class="mb-0">♟ 2023 | Tüm Hakları Saklıdır</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>