<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Satıcı Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --dark-square: #b58863;
            --light-square: #f0d9b5;
            --highlight: #779556;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            padding-top: .75rem;
            padding-bottom: .75rem;
            background-color: rgba(0, 0, 0, .25);
        }

        .nav-link {
            color: white !important;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: #f0d9b5 !important;
            }

        .bg-chess {
            background-color: var(--dark-square);
        }

        .btn-chess {
            background-color: var(--dark-square);
            color: white;
            border: none;
        }

            .btn-chess:hover {
                background-color: var(--highlight);
                color: white;
            }

        main {
            padding-top: 1.5rem;
        }
    </style>
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-chess shadow">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-chess me-2"></i>Satıcı Paneli
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Panel", "Saticilar")">Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Siparislerim", "Saticilar")">Siparişler</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item text-nowrap">
                        <a class="nav-link" href="@Url.Action("Logout", "Saticilar")">Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <main class="container-fluid">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"></script>
    <script>feather.replace();</script>
    @RenderSection("Scripts", required: false)
</body>
</html>
